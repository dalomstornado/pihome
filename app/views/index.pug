extends ./layout

mixin gauge-pair(sensor) 
	.gauge-pair(id=sensor.id)
		h3= sensor.name 
			.temperature
				.gauge(id=window.app.deviceHandler.getGaugeIdTemp(sensor))
			.humidity
				.gauge(id=window.app.deviceHandler.getGaugeIdHumidity(sensor))

block title  
	Title

block content
	script.
		google.charts.load('current', {'packages':['gauge', 'line', 'corechart']});
		let sensors = !{JSON.stringify(sensors)};
		window.app.gauge.init(sensors);
		window.app.lineChart.init(sensors);
		window.app.page.init(sensors);

	each sensor in sensors
		if sensor.type == 'TEMP_HUMIDITY'
			.gauges
				+gauge-pair(sensor)
	.lineChart
		.temperature
			h3 Temp
			.lineChart(id=window.app.deviceHandler.getLineChartIdTemp())
	.lineChart
		.humidty
			h3 Humidity
			.lineChart(id=window.app.deviceHandler.getLineChartIdHumidity())

	.status
		h3 Status
		p Home/Away